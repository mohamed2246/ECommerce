<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:id="@+id/image_seller"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/eco2"
        />

    <TextView
        android:id="@+id/title_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Login"
        android:gravity="center"
        android:layout_below="@id/image_seller"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/seller_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/title_seller"
        android:hint="Phone..."
        android:inputType="number"
        android:textSize="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_white"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/seller_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/seller_login_email"
        android:hint="Password..."
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_white"
        android:padding="10dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape_solid"
        android:fontFamily="@font/baloo"
        android:text="Login"
        android:id="@+id/Rigister_btn_sell"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        android:textSize="18dp"
        android:textStyle="bold"

        android:layout_below="@id/seller_login_password"

        />

    </RelativeLayout>


    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".User.ConfirmFinalOrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lin"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_bar_layout2"
                    android:background="@drawable/gradient_bg"
                    >
                    <include
                        layout="@layout/app_toolbar"
                        android:id="@+id/find_friends_tool_bar"
                        >
                    </include>


                </com.google.android.material.appbar.AppBarLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:textStyle="bold"
                        android:layout_margin="32dp"
                        android:gravity="center"
                        android:text="Shipment Details"
                        android:textColor="@color/colorAccent"
                        android:textSize="28dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/fname_et"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:background="@drawable/et_shape"
                            android:fontFamily="@font/baloo"
                            android:hint="first name"
                            android:inputType="text"
                            android:paddingLeft="16dp"

                            android:textColorHint="@color/gray_color" />

                        <EditText
                            android:id="@+id/lname_et"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:background="@drawable/et_shape"
                            android:fontFamily="@font/baloo"
                            android:hint="Last name"
                            android:inputType="text"
                            android:paddingLeft="16dp"
                            android:textColorHint="@color/gray_color"

                            />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/email_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/et_shape"
                        android:fontFamily="@font/baloo"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/gray_color"

                        />

                    <EditText
                        android:id="@+id/phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/et_shape"
                        android:fontFamily="@font/baloo"
                        android:hint="Phone"
                        android:inputType="number"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/gray_color"

                        />

                    <EditText
                        android:id="@+id/address_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/et_shape"
                        android:fontFamily="@font/baloo"
                        android:hint="Home Address"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/gray_color" />


                    <EditText
                        android:id="@+id/City_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/et_shape"
                        android:fontFamily="@font/baloo"
                        android:hint="City Name"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/gray_color" />





                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_shape_solid"
                    android:fontFamily="@font/baloo"
                    android:text="Confirm"
                    android:id="@+id/Confirm_btn"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />









            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>


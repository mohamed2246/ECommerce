<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="choices"
            android:gravity="center"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/home_nav"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="Home "

        android:textSize="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Favourite"
        android:id="@+id/fav_nav"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_below="@id/home_nav"

        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="History"
        android:id="@+id/history_nav"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_below="@id/fav_nav"

        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Setting"
        android:id="@+id/setting_nav"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_below="@id/history_nav"

        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="About us"
        android:id="@+id/aboutus_nav"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_below="@id/setting_nav"

        android:textStyle="bold"/>

</LinearLayout>